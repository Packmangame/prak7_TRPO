<Page x:Class="prak7_romanov.Pages.PolzScreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:model="clr-namespace:prak7_romanov.Model"
      xmlns:local="clr-namespace:prak7_romanov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PolzScreen">
   
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <WrapPanel Orientation="Vertical" Margin="5">
            <TextBlock Text="Идентефекатор врача:"/>
            <TextBlock Text="{Binding CurrentDoctor.Id}" />
            <TextBlock Text="Имя:" Margin="0,10,0,0"/>
            <TextBlock Text="{Binding CurrentDoctor.Name}" />
            <TextBlock Text="Фамилия" Margin="0,10,0,0"/>
            <TextBlock Text="{Binding CurrentDoctor.LastName}" />
            <TextBlock Text="Отчество:" Margin="0,10,0,0"/>
            <TextBlock Text="{Binding CurrentDoctor.MiddleName}" />
            <TextBlock Text="Специализация:" Margin="0,10,0,0"/>
            <TextBlock Text="{Binding CurrentDoctor.Specialisation}" />
        </WrapPanel>

        <ListView Grid.Column="1" Grid.Row="0" 
                  ItemsSource="{Binding Patients}" 
                  SelectedItem="{Binding SelectedPacient}"
                  Margin="5">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="LightGray" BorderThickness="1" Margin="2" Padding="5" >
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ID: " FontWeight="Bold"/>
                                <TextBlock Text="{Binding Id}"/>
                            </StackPanel>
                            
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ФИО: " FontWeight="Bold"/>
                                <TextBlock Text="{Binding LastName}"/>
                                <TextBlock Text=" "/>
                                <TextBlock Text="{Binding Name}"/>
                                <TextBlock Text=" "/>
                                <TextBlock Text="{Binding MiddleName}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Телефон: " FontWeight="Bold"/>
                                <TextBlock Text="{Binding PhoneNumber}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Дата рождения: " FontWeight="Bold"/>
                                <TextBlock Text="{Binding Birthday}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Приемов: " FontWeight="Bold"/>
                                <TextBlock Text="{Binding PacientStories.Count}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>


        <StackPanel Grid.Column="1" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5" >
            <Button Content="Создать пациента" VerticalAlignment="Center" Margin="225 0 0 0" Padding="5" Click="CreatePatient_Click"/>
            <Button Content="Начать прием" VerticalAlignment="Center" Margin="15 0" Padding="5" Click="StartAppointment_Click"/>
            <Button Content="Изменить информацию" VerticalAlignment="Center" Padding="5" Click="EditPatient_Click"/>
        </StackPanel>
    </Grid>
</Page>
