<Page x:Class="prak7_romanov.Pages.PriemScreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:prak7_romanov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PriemScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Прием пациента" 
                   FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
               
                <StackPanel Margin="5">
                    <TextBlock Text="{Binding SelectedPacient.LastName}" FontWeight="Bold" FontSize="14"/>
                    <TextBlock Text="{Binding SelectedPacient.Name}"/>
                    <TextBlock Text="{Binding SelectedPacient.MiddleName}"/>
                    <TextBlock Text="{Binding SelectedPacient.PhoneNumber}"/>
                </StackPanel>
                

               
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Дата приема:" Margin="5" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding CurrentAppointment.Date}" Margin="5" Padding="2"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Диагноз:" Margin="5" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding CurrentAppointment.Diagnosis}" Margin="5" Padding="2"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Рекомендации:" Margin="5" VerticalAlignment="Top"/>
                    <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding CurrentAppointment.Recommendations}" 
                                Margin="5" Padding="2" Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>
                </Grid>
                
               
                <ListView ItemsSource="{Binding SelectedPacient.PacientStories}" 
                            Height="200" Margin="5">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="LightGray" BorderThickness="0,0,0,1" Padding="5">
                                <StackPanel>
                                    <TextBlock Text="{Binding Date}" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Diagnosis}"/>
                                    <TextBlock Text="{Binding Recommendations}" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Сохранить прием" Margin="5" Padding="15,5" Click="SaveAppointment_Click" />
            <Button Content="Изменить информацию о пациенте" Margin="5" Padding="15,5" Click="EditPatient_Click"/>
            <Button Content="Назад" Margin="5" Padding="15,5" Click="Back_Click"/>
        </StackPanel>
    </Grid>
</Page>
