<Page x:Class="prak7_romanov.Pages.EditPacient"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:prak7_romanov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditPacient">

    <Grid>
       
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Редактирование информации о пациенте" 
                FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
               
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="ID:" Margin="5" VerticalAlignment="Center"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedPacient.Id}" Margin="5" VerticalAlignment="Center" FontWeight="Bold"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Фамилия:" Margin="5" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding SelectedPacient.LastName}" Margin="5" Padding="2"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Имя:" Margin="5" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding SelectedPacient.Name}" Margin="5" Padding="2"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Отчество:" Margin="5" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding SelectedPacient.MiddleName}" Margin="5" Padding="2"/>

                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Дата рождения:" Margin="5" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding SelectedPacient.Birthday}" Margin="5" Padding="2"/>

                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Телефон:" Margin="5" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding SelectedPacient.PhoneNumber}" Margin="5" Padding="2"/>
                </Grid>
               
                <StackPanel>
                    <Button Content="Добавить прием" Margin="5" Padding="10,5" 
                        Click="AddAppointment_Click" HorizontalAlignment="Left"/>

                    <ListView ItemsSource="{Binding SelectedPacient.PacientStories}" 
                            Height="200" Margin="5">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="LightGray" BorderThickness="0,0,0,1" Padding="5">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" Text="{Binding Date}" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" Text="{Binding DoctorId}" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="2" Text="{Binding Diagnosis}" VerticalAlignment="Center" 
                                                TextWrapping="Wrap" Margin="5,0"/>
                                        <Button Grid.Column="3" Content="✏️" Padding="5,2" Margin="5,0"
                                            Click="EditAppointment_Click"
                                            Tag="{Binding}"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
                
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Сохранить" Margin="5" Padding="15,5" Click="SavePatient_Click"/>
            <Button Content="Отмена" Margin="5" Padding="15,5" Click="Cancel_Click"/>
            <Button Content="Удалить пациента" Margin="5" Padding="15,5" Click="DeletePatient_Click" />
        </StackPanel>
        
    </Grid>
</Page>
