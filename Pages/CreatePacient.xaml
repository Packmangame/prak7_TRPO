<Page x:Class="prak7_romanov.Pages.CreatePacient"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:prak7_romanov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreatePacient">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Создание нового пациента" 
                   FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Фамилия:" Margin="5" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding CurrentPacient.LastName}" Margin="5" Padding="2"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Имя:" Margin="5" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding CurrentPacient.Name}" Margin="5" Padding="2"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Отчество:" Margin="5" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding CurrentPacient.MiddleName}" Margin="5" Padding="2"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Дата рождения:" Margin="5" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding CurrentPacient.Birthday}" Margin="5" Padding="2"/>

                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Телефон:" Margin="5" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding CurrentPacient.PhoneNumber}" Margin="5" Padding="2"/>
                </Grid>
                
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Сохранить" Margin="5" Padding="15,5" Click="SavePatient_Click" />
            <Button Content="Отмена" Margin="5" Padding="15,5" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Page>
